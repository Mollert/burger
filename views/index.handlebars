
<div class="container">
  	<div class="row">
		<div class="mainQuestion">
			<p>What type of Burger do you like?</p>
		</div>
		<div class="burgerpic">
			<img src="/assets/img/burger.png" alt="Burger" style="width:500px;height:500px;">
		</div>
		<div class="mainAnswer">
			<p>It's a bean burger for me. . . .</p>
		</div>
	</div>
	<div class="row">
		<div class="col-sm-6 col-md-6">
			<div class="newBurger">
				<h3>Your burgers to devour.</h3>
				<div class="newBurgerList">
					<ul class="w3-ul w3-center">
						{{#each burgers}}
							{{#unless this.devoured}}
								<li class="sideBySide">
									<h4>
										{{this.burger_name}}
										<form action="/id/{{this.id}}" method="POST">
											<input type="hidden" id="id" name="id" value="true">
											<button type="submit" name="id" class="btn btn-primary btn-sm">Devour It!</button>
										</form>
									</h4>
								</li>
							{{/unless}}
						{{/each}}
					</ul>
				</div>
			</div>
		</div>
		<div class="col-sm-6 col-md-6">
			<div class="existingBurger">
				<h3>Here are some burgers already devoured.</h3>
				<div class="existingBurgerList">
					<ul class="w3-ul w3-center">
						{{#each burgers}}
							{{#if this.devoured}}
								<li>
									<h4>
										{{this.burger_name}}
									</h4> 
								</li>
							{{/if}}
						{{/each}}
					</ul>
				</div>
			</div>
		</div>
	</div>
	<div class="row">
		<div class="inputRow">
			<div class="col-sm-3 col-md-3">
			</div>
			<div class="col-sm-6 col-md-6">
				<form class="create-burger" action="/" method="POST">
					<div class="form-group">
						<input type="text" class="form-control input-lg" name="addBurger" placeholder="Type In Your Burger Here">
					</div>
					<button type="submit" class="btn btn-primary btn-lg">Then submit it here</button>
				</form>
			</div>
			<div class="col-sm-3 col-md-3">
			</div>
		</div>
	</div>
</div>